{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/scripts/*"
            ]
        },
        "plugins": [
            {
                "name": "tslint-language-service"
            }
        ],
        "allowJs": false,
        "jsx": "react",
        "lib": [
            "dom",
            "dom.iterable",
            "es2015",
            "es2016",
            "es2017",
            "esnext.asynciterable"
        ],
        "moduleResolution": "node",
        "module": "esNext",
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "target": "es2015",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "types": [
            "three",
            "webpack-env"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
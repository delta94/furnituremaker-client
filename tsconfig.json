{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/scripts/*"],
            "react-restful": ["./react-restful"]
        },
        "plugins": [
            { "name": "tslint-language-service"}
        ],
        "allowJs": false,
        "jsx": "react",
        "lib": [
            "dom",
            "es2017",
            "esnext.asynciterable"
        ],
        "moduleResolution": "node",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "target": "es2016",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "types": [
            "three",
            "webpack-env"
        ]
    },
    "exclude": [
        "node_modules",
        "react-restful"
    ]
}